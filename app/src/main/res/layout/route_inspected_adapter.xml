<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".RouteInspectedAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/SubRouteInCV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"
        app:cardBackgroundColor="#DAF5BC"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/TitleSubRouteIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dsicharge Nest - PR - 01E"
                android:textAppearance="@style/FontStyle"
                android:textColor="@android:color/background_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/InLL1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/TitleSubRouteIn"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Area:"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/InspArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="AreaName"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/InLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/InLL1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Desc:"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/InspSubDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="SubAreaDesc"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/InLL2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/InLL"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Total:"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/TotalCompInsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="123"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="% Complete:"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/InspPerInsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="100%"
                    android:layout_weight="1"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/InLL3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/InLL2"
                android:orientation="horizontal">



            </LinearLayout>

            <LinearLayout
                android:id="@+id/InLL4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/InLL3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/InspectionDateIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView3In"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Background:"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/BackgroundSubRouteIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="1.1"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="PPM"
                    android:textAppearance="@style/FontStyle"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/InspTrueSubIn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tick3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>